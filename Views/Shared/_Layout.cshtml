@using System.Configuration;
<!DOCTYPE html>
<html lang="en">
@{
  var app = ConfigurationManager.AppSettings;
}
<head>
  <title>@ViewBag.Title</title>
  <meta charset="utf-8" />
  <meta name="robots" content="noindex,nofollow" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="{description}" />
  <meta property="twitter:site" content="artistandsocial" />
  <meta property="twitter:creator" content="artistandsocial" />
  <meta property="og:title" content="@ViewBag.Title" />
  <meta property="og:type" content="blog" />
  <meta property="og:url" content="@Request.Url.AbsoluteUri" />
  <meta property="og:site_name" content="@app["appName"]" />
  <meta property="og:description" content="{description}" />
  <link rel="canonical" href="@Request.Url.AbsoluteUri" />
  <link rel="alternate" type="application/rss+xml" title="@app["appName"] feed" href="{feed-url}" />
  <link rel="profile" href="http://gmpg.org/xfn/11" />
  <link rel="shortcut icon" type="image/ico" href="Content/Images/frontendplay.ico" />
  <link rel="icon" type="image/png" href="Content/Images/frontendplay.png" />
  @Styles.Render("~/bundles/stylesheet")
  @Scripts.Render("~/bundles/headjavascript")
</head>
  
<body>
  <div id="play">
    <header>
      <h1>
        <a href="/">@app["appName"]<img src="Content/Images/frontendplay.png" alt="@app["appName"]" title="@app["appName"]"></a>
      </h1>
      <h2>stories about css, javascript, ASP.NET and PC's</h2>
    </header>
    <nav>
      <a href="/">stories</a>
      <a href="~/archive">archive</a>
      <a href="~/about">about</a>
    </nav>
    <div id="area">
      @RenderBody()
    </div>
    <footer>
      <div class="social">
        <a href="https://www.twitter.com/artistandsocial" class="twitter" title="Tobias Klika on twitter"><i class="entypo-twitter"></i></a>
        <a href="https://github.com/ceee" class="github" title="Tobias Klika on github"><i class="entypo-github"></i></a>
        <a href="http://dribbble.com/twentythree" class="dribbble" title="Tobias Klika on dribbble"><i class="entypo-dribbble"></i></a>
        <a href="http://www.behance.net/artistandarchitects" class="github" title="Tobias Klika on github"><i class="entypo-behance"></i></a>
      </div>
      @Html.Partial("../Blog/_RecentPosts", new frontendplay.ViewModels.DefaultViewModel())
      <div class="bottom">&copy; @DateTime.Now.Year @app["appName"], a blog by&nbsp;<a href="http://www.anaheimcore.com">anaheimcore</a>
      </div>
    </footer>
  </div>
  <a href="#" id="backtotop">back to top
    <i class="entypo-up-open"></i>
  </a>

  @Scripts.Render("~/bundles/javascript")
</body>
</html>