<!DOCTYPE html>
<html lang="en">
@{
  var app = System.Configuration.ConfigurationManager.AppSettings;
}
<head>
  <title>@ViewBag.Title - @app["appName"]</title>
  <meta charset="utf-8" />
  <meta name="robots" content="index,follow" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="{description}" />
  <meta property="twitter:site" content="{twittername}" />
  <meta property="twitter:creator" content="{twittername}" />
  <meta property="og:title" content="{title}" />
  <meta property="og:type" content="{type}" />
  <meta property="og:url" content="{full-url}" />
  <meta property="og:site_name" content="@app["appName"]" />
  <meta property="og:description" content="{description}" />
  <link rel="canonical" href="{full-url}" />
  <link rel="alternate" type="application/rss+xml" title="@app["appName"] feed" href="{feed-url}" />
  <link rel="profile" href="http://gmpg.org/xfn/11" />
  <link rel="shortcut icon" type="image/ico" href="Content/Images/{name}.ico" />
  <link rel="icon" type="image/png" href="Content/Images/{name}.png" />
  @Styles.Render("~/bundles/stylesheet")
  @Scripts.Render("~/bundles/headjavascript")
</head>
  
<body>
  @RenderBody()

  @Scripts.Render("~/bundles/javascript")
</body>
</html>